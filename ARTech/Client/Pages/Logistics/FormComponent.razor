@inject HttpClient _client

<EditForm Model="@logistic" OnValidSubmit="OnValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />
    <fieldset disabled="@Disabled">
        <div class=" form-group">
            <label>Name: </label>
            <div>
                <InputText @bind-Value="@logistic.Name" class="form-control" />
                <ValidationMessage For="@(() => logistic.Name)" />
            </div>
        </div>


        <div class=" form-group">
            <label>Address: </label>
            <div>
                <InputText @bind-Value="@logistic.Address" class="form-control" />
                <ValidationMessage For="@(() => logistic.Address)" />
            </div>
        </div>

        <div class=" form-group">
            <label>Contact: </label>
            <div>
                <InputText @bind-Value="@logistic.Contact" class="form-control" />
                <ValidationMessage For="@(() => logistic.Contact)" />
            </div>
        </div>
    </fieldset>

    @if ( !Disabled)
    {
    <button type="submit" class="btn btn-success btn-block">
        @ButtonText
    </button>
    }
    <BackToList Target="logistics" />
</EditForm>

@code {
    [Parameter] public bool Disabled { get; set; } = false;
    [Parameter] public Logistic logistic { get; set; }
    [Parameter] public string ButtonText { get; set; } = "Save";
    [Parameter] public EventCallback OnValidSubmit { get; set; }

}