<EditForm Model="@payment" OnValidSubmit="OnValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />
    <fieldset disabled="@Disabled">

        <div class=" form-group">
            <label>Payment Id: </label>
            <div>
                <InputNumber @bind-Value="@payment.PaymentId" class="form-control" />
                <ValidationMessage For="@(() => payment.PaymentId)" />
            </div>
        </div>
        <div class=" form-group">
            <label>Payment Method: </label>
            <div>
                <InputNumber @bind-Value="@payment.PaymentId" class="form-control" />
                <ValidationMessage For="@(() => payment.PaymentId)" />
            </div>
        </div>

        <div class=" form-group">
            <label>Payment Method: </label>
            <div>
                <InputNumber @bind-Value="@payment.PaymentId" class="form-control" />
                <ValidationMessage For="@(() => payment.PaymentId)" />
            </div>
        </div>

    </fieldset>
    @if (!Disabled)
    {
        <button type="submit" class="btn btn-success btn-block">
            @ButtonText
        </button>
    }
    <BackToList Target="products" />
</EditForm>

@code {
    [Parameter] public bool Disabled { get; set; } = false;
    [Parameter] public Payment payment { get; set; }
    [Parameter] public string ButtonText { get; set; } = "Save";
    [Parameter] public EventCallback OnValidSubmit { get; set; }
}